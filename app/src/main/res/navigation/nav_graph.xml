<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.gianlucaveschi.investmentapp.fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_chooseRecipientFragment"
            app:destination="@id/chooseRecipientFragment" />
        <action
            android:id="@+id/action_mainFragment_to_viewTransactionFragment"
            app:destination="@id/viewTransactionFragment" />
        <action
            android:id="@+id/action_mainFragment_to_viewBalanceFragment"
            app:destination="@id/viewBalanceFragment" />
    </fragment>
    <fragment
        android:id="@+id/chooseRecipientFragment"
        android:name="com.gianlucaveschi.investmentapp.fragments.ChooseRecipientFragment"
        android:label="ChooseRecipientFragment"
        tools:layout="@layout/fragment_choose_recipient">
        <action
            android:id="@+id/action_chooseRecipientFragment_to_specifyAmountFragment"
            app:destination="@id/specifyAmountFragment" />
    </fragment>
    <fragment
        android:id="@+id/specifyAmountFragment"
        android:name="com.gianlucaveschi.investmentapp.fragments.SpecifyAmountFragment"
        android:label="SpecifyAmountFragment"
        tools:layout="@layout/fragment_specify_amount"/>
    <fragment
        android:id="@+id/viewBalanceFragment"
        android:name="com.gianlucaveschi.investmentapp.fragments.ViewBalanceFragment"
        android:label="ViewBalanceFragment"
        tools:layout="@layout/fragment_view_balance"/>
    <fragment
        android:id="@+id/viewTransactionFragment"
        android:name="com.gianlucaveschi.investmentapp.fragments.ViewTransactionFragment"
        android:label="ViewTransactionFragment"
        tools:layout="@layout/fragment_view_transaction"/>
    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.gianlucaveschi.investmentapp.fragments.ConfirmationFragment"
        android:label="ConfirmationFragment"
        tools:layout="@layout/fragment_confirmation"/>
</navigation>